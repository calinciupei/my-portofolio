{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "preserveSymlinks": true
  },
  "include": [
    "**/*.ts" 
  ],
  "exclude": [
    "lib/**/*.test.js"
  ]
}