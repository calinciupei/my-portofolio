{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2017", "ESNext.Intl"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "server"
  ]
}
