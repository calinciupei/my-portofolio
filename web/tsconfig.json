{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./",
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts*",
    "**/*.js*"
  ],
  "exclude": [
    "lib/**/*.test.js",
    "packages/**/*.test.js",
    "jest.config.js"
  ]
}